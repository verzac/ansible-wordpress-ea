version: '3'

services:
   db:
     image: mysql:5.7
     volumes:
       - db_data:/var/lib/mysql
     restart: always
     environment:
       MYSQL_ROOT_PASSWORD: {{ wp_db_psw }}
       MYSQL_DATABASE: {{ wp_db_name }}

   wordpress:
     depends_on:
       - db
     image: wordpress:latest
     ports:
       - "8081:80"
     restart: always
     environment:
       WORDPRESS_DB_HOST: db:3306
       WORDPRESS_DB_USER: root
       WORDPRESS_DB_PASSWORD: {{ wp_db_psw }}
volumes:
    db_data: